.navi {
  position: relative;
  display: block;
  margin-left: 10%;
  padding: 0px;
  padding-top: 15px;
  padding-bottom: 15px;
  width: 80%;
  
  user-select none;
}
.navi li {
  display: block;
  margin-right: 0px;
  cursor: pointer;
  padding: 7px;
  padding-left: 18px;
  padding-right: 18px;
  color: colorWhite;
}

@media screen and (min-width: mediaMedium) {
  .navi li {
    display: inline-block;
  }
}

@media screen and (min-width: mediaLarge) {
  .navi li {
    margin-right: 20px;
    display: inline-block;
  }
}

  .navi li:hover {
    outline: 0;
    color: colorMiddle1;
  }
  .navi li.selected {
    color: colorMiddle1;
  }
  .navi li:active {
    color: colorMiddle1;
  }
  .navi li:focus {
    outline: 0;
  }

.navi .login {
  float: right;
  margin-right: 0px;
}

