<template name="companyInputTests">


  {{!
  Available for pretty much all companies:
    autofocus="autofocus"
    disabled="disabled"
    form="companyAddForm formId2 formId3"
    maxlength="250"
    readonly="readonly"
    required="required" (text, search, url, tel, email, password, date pickers, number, checkbox, radio, file)
    name="(text)" // Note: Only form elements with a name attribute will have their values passed when submitting a form.
    value="default/initial value"
  }}
  
  <fieldset>
    {{! autocomplete="on|off" pattern="regexp for validating the input" size="number(of characters)" }}
    <input class="txt" type="text" name="txt" value="{{txt}}" placeholder="Text" size="8" />
    
    {{! pattern="regexp for validating the input" }}
    <input class="pwd" type="password" name="pwd" value="" placeholder="Password" size="8" />
    
    {{! Label can be bound to input element by putting the input element inside or by using the "for" attribute }}
    <label>
      <input class="radiobuttons" type="radio" name="radiobuttons" value="radiobutton1" checked="checked" />
      Radio button 1
    </label>
    
    <input id="company{{_id}}AddRadiobutton2" class="radiobuttons" type="radio" name="radiobuttons" value="radiobutton2" />
    <label for="company{{_id}}AddRadiobutton2">Radio button 2</label>
    
    <label><input class="checkboxes" type="checkbox" name="checkboxes" value="checkbox1" checked="checked" />Check box 1</label>
    <label><input class="checkboxes" type="checkbox" name="checkboxes" value="checkbox2" />Check box 2</label>
  </fieldset>


  
    {{! multiple="multiple" }}
    <select class="dropdown" name="dropdown" size="1">
      <option value="dropdown1">Dropdown 1</option>
      <optgroup>
        <option value="dropdown2" selected="selected">Dropdown 2</option>
        <option value="dropdown3" disabled="disabled">Dropdown 3</option>
      </optgroup>
    </select>
  
  
    <select class="dropdown" name="dropdown" size="2">
      <option value="dropdown1">Dropdown 1</option>
      <optgroup>
        <option value="dropdown2" selected="selected">Dropdown 2</option>
        <option value="dropdown3" disabled="disabled">Dropdown 3</option>
      </optgroup>
    </select>
  

  {{! or wrap="soft" }}
  <textarea class="txtarea" rows="10" cols="100" maxLength="500" wrap="hard" placeholder="Text area"></textarea>

  <input class="btn" type="button" name="btn" value="Button" />



  {{! NOT SUPPORTED BY Safari }}
  {{! autocomplete="on|off" multiple="multiple" pattern="regexp for validating the input" }}
  <input class="emailaddress" type="email" name="emailaddress" value="Email" size="24" />

  {{! multiple="multiple" accept="audio/*|video/*|image/*|(mime type)" }}
  <input class="fileupload" type="file" name="fileupload" />
  <input class="fileupload" type="file" name="fileupload" multiple="multiple"/>

  <input class="hide" type="hidden" name="hide" value="Hidden" />


  {{! autocomplete="on|off" }}
  <input class="rangevalue" type="range" name="rangevalue" min="1" value="3" max="5" step="1" />


  {{! NOT SUPPORTED BY Safari }}
  {{! autocomplete="on|off" pattern="regexp for validating the input" }}
  <input class="urladdress" type="url" name="urladdress" value="Url" placeholder="Url address" size="24" />

  <fieldset class="setoffields" name="setoffields">
    <legend>Set of fields</legend>
    <input class="txt" type="text" name="txt" value="{{txt}}" placeholder="Text" />
    <input class="txt" type="text" name="txt" value="{{txt}}" placeholder="Text" />
  </fieldset>

  
    <input class="txt" list="datalistCompanies" type="text" name="txt" value="" placeholder="Text to autocomplete" />
    {{! Not supported by IE9 or Safari}}
    <datalist id="datalistCompanies">
      <option value="A datalistcompany 1"></option>
      <option value="A datalistcompany 2"></option>
      <option value="B datalistcompany 1"></option>
      <option value="B datalistcompany 2"></option>
      <option value="B datalistcompany 3"></option>
    </datalist>
  

  {{! Not supported by IE}}
  {{!keytype="rsa|dsa|ec" challenge="challenge"}}
  Security: <keygen class="security" name="security" keytype="rsa">

  <output class="outputTag" name="outputTag" for="inputId1 inputId2 inputId3"></output>


  <fieldset class="submitButtons" name="submitButtons">
    <legend>Submit buttons</legend>
    <input class="resetbutton" type="reset" name="resetbutton" value="Reset" />
    {{! Image as the submit button}}
    {{! formaction="url..." formenctype="" formmethod="get|post" formnovalidate="" formtarget="" }}
    <input class="img" type="image" src="img.jpg" name="img" value="Image" height="30px" width="80px" alt="[Image:input image]" />
    {{! formaction="url..." formenctype="" formmethod="get|post" formnovalidate="" formtarget="" }}
    <input class="send" type="submit" name="send" value="Submit" />
  </fieldset>













  {{! Unnecessary/duplicate function }}
  <button class="btnButton" type="button" name="btnButton" value="btnButtonPressed">Button button</button>
  <button class="btnReset" type="reset" name="btnReset" value="btnResetPressed">Button reset</button>

  {{! formaction="url..." formenctype="" formmethod="get|post" formnovalidate="" formtarget="" }}
  <button class="btnSubmit" type="submit" name="btnSubmit" value="btnSubmitPressed">Button submit</button>



  {{!
  For number, range, date, datetime, datetime-local, month, time and week:
    max="number|date"
    min="number|date"
    step="number" (eg. 3 defines valid values as -3, 0, 3, 6, ...)
  to specify range of valid values.
  Doesn't work in Firefox!
  }}


  {{! NOT SUPPORTED BY Firefox, IE, Safari }}
  {{! autocomplete="on|off" }}
  <input class="selectcolor" type="color" name="selectcolor" value="Color" />

