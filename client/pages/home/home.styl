.pageHome {
  position: relative;
}

.homeSociety {
  width: 160px;
  padding: 20px;
  padding-top: 70px;
  padding-bottom: 70px;
  text-align: centeR;
  background-color: #2969c1;
  color: #ffffff;
  border: solid #2969c1 5px;
  display: inline-block;
  
  border-radius: 7px;
  margin-right: 30px;
  
  cursor: pointer;
  
  font-size: 1.5em;
  
}
.homeSociety:hover {
  background-color: #2260bd;
}
.homeSocietyCreate {
  background-color: #ffffff;
  color: #2969c1;
  border: dashed #2969c1 5px;
}

#homeSlogan {
  z-index: 1;
  font-size: 1em;
  position: absolute;
  right: 0px;
  top: 0px;
  background-color: colorWhite;
  width: 33%;
  padding: 15px;
}

#homeBanner {
  width: 120%;
  position: relative;
  left: -120px;
  top: -45px;
}
