/* RESPONSIVE DESIGN DEVICES */
mediaLarge = 1100px;
mediaMedium = 700px;

/* COLORS */
colorDark = #000000;
colorMiddle1 = #0066cc;
colorMiddle2 = #888888;
colorLight = #f2f2f2;
colorLight2 = #e2e2e2;

colorWhite = #ffffff;
colorGray = #999999;

colorBlue = #0066cc;
colorGreen = #006633;
colorYellow = #dca000;
colorOrange = #ee950e;
colorRed = #e22222;
colorPurple = #83477f;

/* OPACITIES */
seethrough = 0.8;

/* MIXIN FUNCTIONS */
border-radius(n)
  -webkit-border-radius n
  -moz-border-radius n
  border-radius n

user-select(set)
  -webkit-touch-callout set
  -webkit-user-select set
  -khtml-user-select set
  -moz-user-select set
  -ms-user-select set
  user-select set
  
/* FONT-SIZES */
fontLarge = 1.5em;
fontSmall = 0.7em;

/* ELEMENT SIZES */
rowHeight = 80px;
paddingTable = 10px;
paddingPage = 50px;

/******************************* END OF COPY-PASTE ***************************/


.pageHome {
  position: relative;
}

#homeText {
  z-index: 2;
  position: relative;
  margin-top: paddingPage;
  margin-left: 5%;
  width: 70%;
  background-color: colorWhite;
  opacity: 0.8;
  padding: 10%;
  padding-top: 30px;
}
#homeTextLarge {
  margin: 0px;
  font-size: 1.3em;
}

@media screen and (min-width: mediaLarge) {
  #homeText {
    margin-left: 30%;
    padding: paddingPage;
    width: 40%;
  }
 #homeTextLarge {
    font-size: fontLarge;
  }
}

#homeBanner {
  z-index: 1;
  
  position: fixed;
  left: 0px;
  top: 0px;
  
  width: 100%;
  height: 100vh;
  background-image: url("images/home/homebanner.jpg");
  background-size: cover;
  background-position: center top;
  background-repeat: none;
  
  user-select(none);
  
}


