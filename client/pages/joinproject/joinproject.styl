.pageJoinproject .table {
  border-collapse: separate;
  border-spacing: 10px 10px;
}
    
.pageJoinproject .tablecell {

  vertical-align: top;
  width: 100%;
  
  border: solid colorDark 1px;
  border-radius(4px);
  
  padding: 30px;
  padding-left: 60px;
  padding-bottom: 60px;
  
}

@media screen and (min-width: mediaLarge) {
  .pageJoinproject .tablerow {
    display: table-row;
  }
  .pageJoinproject .tablecell {
    width: 35%;
    display: table-cell;
  }
}


.joinprojectTableNoColors .tablecell {
  border: 0px;
  padding: 0px;
  padding-left: 60px;
  padding-right: 30px;
}



.pageJoinproject hr { 
  display: block;
  height: 1px;
  border: 0;
  border-top: solid 1px colorGray;
  margin: 3em 0;
  padding: 0;
}

