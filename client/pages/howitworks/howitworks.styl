.pageHowitworks {
  margin-left: 0px !important;
  padding: 0px !important;
  
  display: table;
  
  color: colorWhite;
}


.pageHowitworks > section {
  display: block;
  vertical-align: top;
  width: 100%;
  min-height: 80vh;
  
  background-size: cover;
  background-position: center center;
  background-repeat: none;
  
  border-bottom: solid colorDark 2px;
  
  margin-left: 0px;
  
  padding: 40px;
  padding-top: 40px;
  padding-bottom: 40px;
  
  text-align: justify;
}

@media screen and (min-width: mediaLarge) {
 .pageHowitworks > section {
    padding-right: 58%; /*120px;*/
    padding-top: 120px;
    padding-bottom: 90px;
    padding-left: 140px;
  }
}

.pageHowitworks section p, .pageHowitworks section ul,
.pageHowitworks section h2 {
  background-color: colorDark;
  opacity: seethrough;
  padding: 50px;
  padding-bottom: 30px;
  padding-top: 0px;
  margin-bottom: 0px;
  margin-top: 0px;
}
.pageHowitworks section h2 {
  padding-top: 50px;
}

.pageHowitworks li {
  margin-bottom: 30px;
  margin-left: 50px;
}

.pageHowitworks h2 {
  padding-top: 30px;
  padding-bottom: 0px;
  
  font-size: 4em;
  font-weight: bold;
  color: colorGray;
  text-align: left;
}




.pageHowitworks .popupLink {
  display: block;
  margin: 10px;
  margin-left: 0px;
  cursor: pointer;
  color: colorDark;
}


.pageHowitworks .popupLink:hover {
  background-color: black;
  color: colorWhite;
}
