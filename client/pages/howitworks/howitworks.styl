.pageHowitworks p, .pageHowitworks ul, .pageHowitworks h2 {
  font-size: 2em;
}
.pageHowitworks h2 {
  font-size: 4em;
  margin-bottom: 40px;
}

.pageHowitworks > section {
  display: block;
  vertical-align: top;
  width: 100%;
  min-height: 80vh;
  
  background-size: cover;
  background-position: center center;
  background-repeat: none;
  
  border-bottom: solid colorDark 2px;
  
  margin-left: 0px;
  
  padding: 40px;
  padding-top: 40px;
  padding-bottom: 40px;
  
  background-color: colorLight;
}

@media screen and (min-width: mediaLarge) {
 .pageHowitworks > section {
    padding-right: 120px;
    padding-top: 120px;
    padding-bottom: 90px;
    padding-left: 140px;
  }
}



