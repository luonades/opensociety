.popupFreeze {
  z-index: 3;
  position: fixed;
  top: 0;
  left: 0;
  
  background-color: colorDark;
  width: 100%;
  height: 100%;
  opacity: seethrough;
}

.popup {
  z-index: 4;
  
  position: fixed;
  top: 5%;
  left: 5%;
  
  border: solid colorGray 1px;
  border-radius: 3px;
  
  width: 78%;
  max-height: 80vh;
  
  padding: 5%;
  background-color: colorDark;
  color: colorWhite;
  
  overflow: auto;
}
.popupControls {
  position: absolute;
  top: 0px;
  right: 0px;
}

.popupControls button {
  font-size: 20px;
  font-weight: bold;
  font-family: arial;
  display: block;
  width: 50px;
  vertical-align: center;
  height: 50px;
  
}
.popupControls button span {
  font-size: 30px;
}
