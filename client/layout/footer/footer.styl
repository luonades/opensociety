.footer {
  text-align: center;
  background-color: #777777;
  background: linear-gradient(#555555, #777777);
  color: #aaaaaa;
  padding-top: 50px;
  padding-bottom: 80px;
  text-transform: uppercase;
  font-size: 11px;
  margin-top: 40px;
}
.footer a {
  text-decoration: none;
  color: inherit;
  outline: 0;
}
.footer a:hover {
  text-decoration: underline;
}
