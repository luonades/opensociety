/* Fonts */
@font-face {
    font-family: alegreya;
    src: url('fonts/Alegreya-Regular.otf');
}
@font-face {
    font-family: alegreya;
    src: url('fonts/Alegreya-Bold.otf');
    font-weight: bold;
}
@font-face {
    font-family: alegreya;
    src: url('fonts/Alegreya-Italic.otf');
    font-style: italic;
}
@font-face {
    font-family: alegreya;
    src: url('fonts/Alegreya-BoldItalic.otf');
    font-weight: bold;
    font-style: italic;
}




body {
  margin: 0px;
  /*font-size: 100%;*/
  font-family: alegreya;
  background-color: colorLight;
}
h1 {
  position: relative;
  left: -40px;
  margin-top: 20px;
  margin-bottom: 25px;
  
  font-size: 4em;
  font-weight: bold;
  color: colorGray;
}


.innerLink {
  color: colorMiddle1;
  cursor: pointer;
}
.innerLink:hover {
  text-decoration: underline;
}

.button {
  background-color: colorMiddle1 !important;
  color: colorWhite !important;
  font-family: alegreya !important;
  margin: 2px;
  border-radius: 2px;
  border: 0px;
  outline: 0px;
  cursor: pointer;
}
.button:hover {
  background-color: colorGray !important;
}



::-webkit-input-placeholder {
   color: colorGray;
}

:-moz-placeholder { 
   color: colorGray;  
}

::-moz-placeholder {
   color: colorGray;
}

:-ms-input-placeholder {  
   color: colorGray;
}





